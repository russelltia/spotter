extends default

block header

block content
  div.spot
    div.spot-image(style=`background: url('/images/${spot.imgSrc}') top center
    no-repeat; background-size: cover;`)
    div.spot-details
      h1.spot-name
        | #{spot.firstname} 
      h3.spot-price
        | #{spot.lastname}
      h3.spot-tagline
        | #{spot.tagline}
      p.spot-bio
        | #{spot.bio}
      a.button.button-twitter(href=`${spot.twitter}`)
        | Contact Owner